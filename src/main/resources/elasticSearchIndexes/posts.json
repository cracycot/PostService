{

  "settings": {
    "index" : {
      "number_of_shards" : 1,
      "analysis": {
        "filter" : {
          "autocomplete_filter": {
            "type": "edge_ngram",
            "min_gram": 1,
            "max_gram": 20
          }
        },

        "analyzer" : {
          "autocomplete": {
            "type": "custom",
            "tokenizer" : "standard",
            "filter" : [ "lowercase",
              "autocomplete_filter"
            ]


          }
        }
      }
    }
  },

  "mappings": {
    "properties" : {
      "id" : {
        "type" : "long"
      },
      "title" : {
        "type" : "text"
      },
      "content": {
        "type": "text",
        "analyzer": "autocomplete",
        "search_analyzer" : "standard"
      }
    }
  }
}